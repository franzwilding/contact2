<h1>Listing fields</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Label</th>
    <th>iType</th>
    <th>Orderby</th>
    <th>Required</th>
    <th>Fieldgroup</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fields.each do |field| %>
  <tr>
    <td><%= field.name %></td>
    <td><%= field.label %></td>
    <td><%= field.itype %></td>
    <td><%= field.orderby %></td>
    <td><%= field.required %></td>
    <td><%= field.fieldgroup_id %></td>
    <td><%= link_to 'Show', field %></td>
    <td><%= link_to 'Edit', edit_field_path(field) %></td>
    <td><%= link_to 'Destroy', field, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

